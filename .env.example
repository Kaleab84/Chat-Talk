# =========================
# Pinecone Vector Database
# =========================

# Get this from: Pinecone Console → "API Keys" → Create or copy an existing key.
PINECONE_API_KEY=YOUR_PINECONE_API_KEY_HERE

# These are not secret; you can keep them as-is or adjust to your setup.
PINECONE_INDEX_NAME=cfc-animal-feed-chatbot-test
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

PINECONE_INDEX_NAME_VIDEOS=cfc-videos
PINECONE_NAMESPACE=cfc-videos

# Embedding model name used in your app (usually safe to keep as-is).
EMBED_MODEL=all-MiniLM-L6-v2


# =========================
# Supabase (Database + Storage)
# =========================

# Supabase project URL (safe to expose, but project-specific).
# Get this from: Supabase Dashboard → Project → Settings → "General" → Project URL.
SUPABASE_URL=https://uqdnuaxbhafstditsmfd.supabase.co/

# Public anon key (used in frontend; still best to treat it carefully).
# Get this from: Supabase Dashboard → Project → Settings → "API" → "Project API keys" → "anon public".
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Storage bucket for documents (usually fine to keep as-is, matches what you created in Storage).
SUPABASE_BUCKET=cfc-docs

# ⚠️ Service role key is VERY sensitive (backend-only).
# Get this from: Supabase Dashboard → Project → Settings → "API" → "Project API keys" → "service_role".
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# Bucket for videos (name only, not sensitive).
SUPABASE_BUCKET_VIDEOS=cfc-videos


# =========================
# AI API Keys
# =========================

# OpenAI (leave blank in example; user should fill their own key)
# Get this from: OpenAI Platform → "API keys".
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Gemini API key (sensitive).
# Get this from: Google AI Studio (or Google Cloud console) → "Get API key".
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Model name (safe to keep as-is, or change if you use a different model).
GEMINI_MODEL=gemini-2.5-flash


# =========================
# Session / Auth
# =========================

# Session secret is VERY sensitive — never commit a real value.
# Generate one, for example:
# - Using Node:  require('crypto').randomBytes(32).toString('hex')
# - Or: `openssl rand -hex 32` in a terminal.
SESSION_SECRET=YOUR_RANDOM_SESSION_SECRET_HERE

SESSION_COOKIE_NAME=CFC_SESSION
SESSION_TTL_DAYS=7


# =========================
# Frontend / Backend URLs
# =========================

# Local dev URLs (not sensitive).
FRONTEND_BASE_URL=http://localhost:3000
BACKEND_BASE_URL=http://localhost:8000

# If CORS_ORIGINS is used, list allowed origins (not sensitive, but env-specific).
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

ENV=development


# =========================
# Production Config
# =========================

# Public site URL (not sensitive).
CFC_WEBSITE_URL=https://cfc-website.com

# For dev/testing (disable protection)
ENABLE_REFERRER_PROTECTION=false
